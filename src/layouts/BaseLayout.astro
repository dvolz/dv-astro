---
import Header from '../components/Header.astro'
import TypographyHero from '../components/TypographyHero.astro'
import Footer from '../components/Footer.astro'
import 'modern-normalize/modern-normalize.css'
import Variables from '../components/Variables.astro'
import '../styles/global/_variables.scss'
import '../styles/global.scss'
import '../styles/global/_typography.scss'
import '../styles/global/_header.scss'
import '../styles/global/_layout.scss'
import '../styles/global/_content.scss'
import '../styles/global/_button.scss'
import '../styles/global/_solo-line.scss'
import '../styles/global/_article.scss'
const {
	pageTitle,
	subTitle,
	showSidebar,
	showTypographyHero = true,
	theme = '',
	fullWidthBody = false,
	pubDate,
	description = 'Sample Description',
} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon-dv.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="preload"
			href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&display=swap"
			as="style"
			onload="this.rel='stylesheet'"
		/>

		<Variables />
	</head>
	<body class={`${fullWidthBody ? 'full-width-body' : ''} ${theme}`}>
		<div class="catHouse"></div>
		<div
			class={[
				'site',
				showSidebar ? 'sidebar' : '',
				fullWidthBody ? 'full-width-body' : '',
			]
				.filter(Boolean)
				.join(' ')}>
			<Header />
			<main>
				{
					showTypographyHero && (
						<TypographyHero
							pageTitle={pageTitle}
							subTitle={subTitle}
							theme={theme}
						/>
					)
				}
				<slot />
			</main>
			{
				showSidebar && (
					<aside>
						<div class="sidebar-item">
							<h3>Thoughts</h3>
						</div>
					</aside>
				)
			}
			<Footer />
		</div>
	</body>
</html>
