---
import { Image } from 'astro:assets'

// Reusable image component with custom default behavior
const {
	src,
	alt,
	width = 800,
	height = 600,
	format = 'webp',
	quality = 75,
} = Astro.props
---

<Image
	src={src}
	alt={alt}
	width={width}
	height={height}
	format={format}
	quality={quality}
	layout="responsive"
/>
