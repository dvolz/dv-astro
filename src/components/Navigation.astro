---
const navLinks = [
	{ path: '/about/', name: 'About' },
	{ path: '/thoughts/', name: 'Thoughts' },
	{ path: '/play/', name: 'Play' },
]
const currentPath = Astro.url.pathname
---

<ul class="nav-links">
	{
		navLinks.map((link) => (
			<li>
				<a
					href={link.path}
					class={currentPath.startsWith(link.path) ? 'active' : ''}>
					{link.name}
				</a>
			</li>
		))
	}
</ul>
